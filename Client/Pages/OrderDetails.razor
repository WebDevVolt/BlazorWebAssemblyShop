@page "/orders/{orderId:int}"
@if(order == null)
{
    <spas>Loading order...</spas>
}
else
{
    <h3>Order from @order.OrderDate</h3>
    <div class="order-details-container">
        @foreach (var product in order.Products)
        {
            <div class="product-container">
                <div>
                    <img src="@product.ImageUrl" class="img-fluid product-image" />
                </div>
                <div class="product-details">
                    <h5><a href="/product/@product.ProductId" class="product-title">@product.ProductTitle</a></h5>
                    <span class="quantity">Quantity: @product.Quantity</span>
                </div>
                <div class="total-price">
                    $@product.TotalPrice
                </div>
            </div>
        }

        <div class="order-total">
            Total: $@order.TotalPrice
        </div>
    </div>
}
