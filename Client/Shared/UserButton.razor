<div class="dropdown ms-2">
    <button class="btn btn-secondary dropdown-toggle user-button" id="dropdownMenuButton" aria-expanded="false">
        <i class="bi bi-person"></i>
    </button>
    <div class="dropdown-menu dropdown-menu-md-end">
        <AuthorizeView>
            <Authorized>
                <a href="profile" class="dropdown-item">Profile</a>
                <a href="orders" class="dropdown-item">Orders</a>
                <hr class="dropdown-divider" />
                <a class="dropdown-item" @onclick="Logout">Logout</a>
            </Authorized>
            <NotAuthorized>
                <a href="login?returnUrl=@NavigationManager.ToBaseRelativePath(NavigationManager.Uri)"
                   class="dropdown-item">Login</a>
                <a href="register" class="dropdown-item">Register</a>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>
